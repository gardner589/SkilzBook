<div class="">
<h1><%= @skill.game%></h1>
<% if current_user %>
<div>
<p class=""><%= link_to "Add Build", new_skill_build_path(@skill), :style=>'color: #fff; text-decoration: none;'%></p>
<p><%= link_to "Delete", @skill, method: :delete, data: {confirm: "You sure mate?"}%></p>
</div>
<%end%>

<% @skill.builds.each do |build| %>
  <div class="">
      <div>
        <%= link_to skill_build_path(@skill, build), :style=>'color: #fff; text-decoration: none;' do %>
          <h4><%= build.name %></h4>
          <img class="bld-img" src="<%= build.img_url %>">
        <%end%>
        <div class="row">
          <% if current_user %>
            <p class=""><%= link_to "Edit Build", edit_skill_build_path(@skill, build)%></p>
            <p><%= link_to 'Delete', skill_build_path(@skill, build), method: :delete, data: { confirm: 'Are you sure?' } %></p>
          <%end%>
        </div>
      </div>
  </div>
<%end%>
</div>
